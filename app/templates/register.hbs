<div class="row">
    <div class="spacer2"></div>
    <div class="col-xs-6 col-sm-4"></div>
    <div class="col-xs-6 col-sm-4" style="text-align: center; color: white">
        <div class="spacer"></div>
        <h2>Registration</h2>
    </div>
    <div class="col-xs-6 col-sm-4"></div>
</div>

<form {{action 'register' on='submit'}}>
    <div class="row">
        <div class="col-xs-6 col-sm-4"></div>
        <div class="col-xs-6 col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon" for="username">Username</span>
                <input id='username' class="form-control disabled" value="" >
            </div>
        </div>
        <div class="col-xs-6 col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-sm-4"></div>
        <div class="col-xs-6 col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon" for="email">Email</span>
              {{input id='email' type='email' class="form-control disabled"  value=""}}
            </div>
        </div>
        <div class="col-xs-6 col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-sm-4"></div>
        <div class="col-xs-6 col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon" for="phone">Phone</span>
              {{input id='phone' class="form-control "  value=""}}
            </div>
        </div>
        <div class="col-xs-6 col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-sm-4"></div>
        <div class="col-xs-6 col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon" for="oldPassword">Password</span>
              {{input id='oldPassword' type='password' class="form-control "  }}
            </div>
        </div>
        <div class="col-xs-6 col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-sm-4"></div>
        <div class="col-xs-6 col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon" for="newPassword">Retype Password</span>
              {{input type='password' id='newPassword' class="form-control " }}
            </div>
        </div>
        <div class="col-xs-6 col-sm-4"></div>
    </div>

    <div class="row">
        <div class="col-xs-6 col-sm-4"></div>
        <div class="col-xs-6 col-sm-2">
            <div>
                <button class="btn btn-primary btn-block" type="submit">Register</button>
            </div>
        </div>
        <div class="col-xs-6 col-sm-2">
            <div>
                <button class="btn btn-primary btn-block" type="reset">Revert</button>
            </div>
        </div>
        <div class="col-xs-6 col-sm-4"></div>
    </div>
</form>



{{outlet}}
